<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>items</key>
	<array>
    <!-- enable switch -->
    <dict>
      <key>cell</key>             <string>PSSwitchCell</string>
      <key>default</key>          <true/>
      <key>defaults</key>         <string>com.lkemitchll.statustime+prefs</string>
      <key>key</key>              <string>STIsEnabled</string>
      <key>label</key>            <string>Enabled</string>
      <key>alternateColors</key>  <true/>
      <key>PostNotification</key> <string>com.lkemitchll.statustime+prefs/SettingsChanged</string>
    </dict>
    <!-- Group -->
		<dict>
			<key>cell</key>
			<string>PSGroupCell</string>
			<key>label</key>
			<string>custom clock format</string>
		</dict>
    <!-- text cell -->
		<dict>
      <key>cell</key>             <string>PSEditTextCell</string>
      <key>defaults</key>         <string>com.lkemitchll.statustime+prefs</string>
      <key>default</key>          <string>hh:mm</string>
      <key>key</key>              <string>STTime</string>
      <key>label</key>            <string>Format</string>
      <key>PostNotification</key> <string>com.lkemitchll.statustime+prefs/STSettingsChanged</string>
		</dict>
    <!-- Group -->
    <dict>
      <key>cell</key>             <string>PSGroupCell</string>
      <key>label</key>            <string>Device will respring</string>
    </dict>
    <!-- save button -->
    <dict>
      <key>cell</key>             <string>PSButtonCell</string>
      <key>label</key>            <string>Save</string>
      <key>action</key>           <string>save</string>
    </dict>
    <!-- group / formatting -->
    <dict>
      <key>cell</key>             <string>PSGroupCell</string>
      <key>footerText</key>
      <string>
        Formatting Guide
        Time:
        hh = hour
        mm = minutes
        ss = seconds

        Day:
        dd = 14
        E = Tue
        EEEE = Tuesday
        EEEEE = T

        Month:
        MM = 12
        MMM = Sept
        MMMM = September
        MMMMM = S
        
        Year:
        yy = 14
        yyyy = 2014
        Custom Text:
        'custom' = custom
      </string>
    </dict>
	</array>
  <!-- main title -->
	<key>title</key>
	<string>StatusTime+</string>
</dict>
</plist>